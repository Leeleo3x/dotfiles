[
  {
    "defaults": {
      "link": {
        "relink": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.vim": "vim/",
      "~/.vimrc": "vimrc",
      "~/.gitconfig": "gitconfig",
      "~/.gitignore": "gitignore"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
